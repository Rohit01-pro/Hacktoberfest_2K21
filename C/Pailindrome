#include <stdio.h>
int main() 
{
    int n, reverse = 0, remainder, input;
    printf("Enter any integer value: ");
    scanf("%d", &n);
    input = n;

    while (n != 0) 
    {
        remainder = n % 10;
        reverse = reverse * 10 + remainder;
        n /= 10;
